<!-- app/views/ceramic_pieces/_form.html.erb -->
<div class="container mt-5">

  <%= form_with(model: ceramic_piece, url: form_ceramic_piece_path, local: true) do |form| %>

    <div class="mb-3">
      <%= form.label :height, 'Height' %>
      <%= form.text_field :height, placeholder: 'Height in cm' %>
    </div>

    <div class="mb-3">
      <%= form.label :width, 'Width' %>
      <%= form.text_field :width, placeholder: 'Width in cm' %>
    </div>

    <div class="mb-3">
      <%= form.label :thickness, 'Thickness' %>
      <%= form.text_field :thickness, placeholder: 'Thickness in cm' %>
    </div>

    <div class="mb-3">
      <%= form.label :clay_cost, 'Clay Cost' %>
      <%= form.text_field :clay_cost, placeholder: 'Clay cost' %>
    </div>

    <div class="mb-3">
      <%= form.label :nail_polish_cost, 'Nail Polish Cost' %>
      <%= form.text_field :nail_polish_cost, placeholder: 'Nail polish cost' %>
    </div>

    <div class="mb-3">
      <%= form.label :electricity_cost, 'Electricity Cost' %>
      <%= form.text_field :electricity_cost, placeholder: 'Electricity cost' %>
    </div>

    <div class="mb-3">
      <%= form.label :burn_duration, 'Burn Duration' %>
      <%= form.text_field :burn_duration, placeholder: 'Burn duration in hours' %>
    </div>

    <div class="mb-3">
      <%= form.label :oven_power, 'Oven Power' %>
      <%= form.text_field :oven_power, placeholder: 'Oven power in kW' %>
    </div>

    <div class="mb-3">
      <%= form.label :maintenance_cost, 'Maintenance Cost' %>
      <%= form.text_field :maintenance_cost, placeholder: 'Maintenance cost' %>
    </div>

    <div class="mb-3">
      <%= form.label :labor_cost, 'Labor Cost' %>
      <%= form.text_field :labor_cost, placeholder: 'Labor cost in currency' %>
    </div>

    <div class="mb-3">
      <%= form.submit "Calculate Cost" %>
    </div>
  <% end %>
</div>
